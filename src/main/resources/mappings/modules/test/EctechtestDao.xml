<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jeeplus.modules.test.dao.EctechtestDao">
    
	<sql id="ectechtestColumns">
		a.id AS "id",
		a.name AS "name",
		a.sex AS "sex"
	</sql>
	
	<sql id="ectechtestJoins">
	</sql>
	
    
	<select id="get" resultType="Ectechtest" >
		SELECT 
			<include refid="ectechtestColumns"/>
		FROM ectechtest a
		<include refid="ectechtestJoins"/>
		WHERE a.id = #{id}
	</select>
	
	<select id="findList" resultType="Ectechtest" >
		SELECT 
			<include refid="ectechtestColumns"/>
		FROM ectechtest a
		<include refid="ectechtestJoins"/>
		<where>
			
			<if test="name != null and name != ''">
				AND a.name LIKE 
					<if test="dbName == 'oracle'">'%'||#{name}||'%'</if>
					<if test="dbName == 'mssql'">'%'+#{name}+'%'</if>
					<if test="dbName == 'mysql'">concat('%',#{name},'%')</if>
			</if>
		</where>
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<select id="findAllList" resultType="Ectechtest" >
		SELECT 
			<include refid="ectechtestColumns"/>
		FROM ectechtest a
		<include refid="ectechtestJoins"/>
		<where>
			
		</where>		
		<choose>
			<when test="page !=null and page.orderBy != null and page.orderBy != ''">
				ORDER BY ${page.orderBy}
			</when>
			<otherwise>
			</otherwise>
		</choose>
	</select>
	
	<insert id="insert">
		INSERT INTO ectechtest(
			id,
			name,
			sex
		) VALUES (
			#{id},
			#{name},
			#{sex}
		)
	</insert>
	
	<update id="update">
		UPDATE ectechtest SET 	
			name = #{name},
			sex = #{sex}
		WHERE id = #{id}
	</update>
	
	
	<!--物理删除-->
	<update id="delete">
		DELETE FROM ectechtest
		WHERE id = #{id}
	</update>
	
	<!--逻辑删除-->
	<update id="deleteByLogic">
		UPDATE ectechtest SET 
			del_flag = #{DEL_FLAG_DELETE}
		WHERE id = #{id}
	</update>
	
	
	<!-- 根据实体名称和字段名称和字段值获取唯一记录 -->
	<select id="findUniqueByProperty" resultType="Ectechtest" statementType="STATEMENT">
		select * FROM ectechtest  where ${propertyName} = '${value}'
	</select>
	
</mapper>